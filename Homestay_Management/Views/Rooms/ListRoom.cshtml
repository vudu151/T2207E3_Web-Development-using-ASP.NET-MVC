@model List<Homestay_Management.Models.RoomModel>


<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Our Rooms</h2>
                    <div class="bt-option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Rooms</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Rooms Section Begin -->
<section class="rooms-section spad">
    <div class="container">
        <div class="row">

            <!--Display ListRoom-->
            @foreach(var room in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="room-item">
                        <img src="@room.Image" alt="Image Room">
                        <div class="ri-text">                        
                            @if (room.TypeRoom.Name != null)
                            {
                                <h4>@room.TypeRoom.Name</h4>
                            }
                            <h3>@room.Price<span>$/Month</span></h3>
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="r-o">Name:</td>
                                        <td>@room.Name</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Size:</td>
                                        <td>@room.Size<span> ft</span></td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Capacity:</td>
                                        <td><span>Max persion</span> @room.Capacity</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Devices:</td>
                                        <td>
                                            <div class="truncate-text">
                                                @room.Device
                                            </div>
                                        </td>
                                    </tr> 
                                </tbody>
                            </table>
                            <a asp-controller="Rooms" asp-action="RoomDetail" asp-route-roomId="@room.Id" class="primary-btn">More Details</a>
                            <!--Chú ý: asp-route-roomId="@room.Id" dùng để truyền thông tin phòng từ ListRoom sang Detail tương ứng với từng cái-->
                        </div>
                    </div>
                </div>
            }

            
            <!--Pagination-->
            <div class="col-lg-12">
                <div class="room-pagination">
                    <a href="#">1</a>
                    <a href="#">2</a>
                    <a href="#">Next <i class="fa fa-long-arrow-right"></i></a>
                </div>
            </div>


        </div>
    </div>
</section>
<!-- Rooms Section End -->




<!--CSS Hiển thị dữ liệu chỉ trong một dòng rồi thêm dấu ... -->
<style>
    .truncate-text{
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 1;          /* Số dòng hiển thị tối đa trước khi cắt */
        -webkit-box-orient: vertical;
    }
</style>